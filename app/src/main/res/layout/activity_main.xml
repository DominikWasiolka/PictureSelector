<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/contentIV" android:layout_marginStart="128dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="116dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activateButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="140dp"
            android:layout_marginTop="68dp" app:layout_constraintTop_toBottomOf="@+id/contentIV"/>

</android.support.constraint.ConstraintLayout>
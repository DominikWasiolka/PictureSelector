<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="wrap_content"    >

    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tags"
            android:layout_alignParentEnd="true" android:layout_marginEnd="112dp"
            android:layout_marginStart="1dp" android:layout_marginTop="4dp"
            android:layout_below="@+id/title" android:layout_alignStart="@+id/title"/>
    <TextView
            android:text=""
            android:layout_width="156dp"
            android:layout_height="wrap_content" android:id="@+id/title"
            android:layout_marginTop="2dp" android:layout_below="@+id/image"
            android:layout_alignParentStart="true" android:layout_marginStart="4dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" android:id="@+id/image"
            android:layout_marginTop="0dp" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:layout_marginEnd="147dp" android:layout_alignParentStart="true" android:layout_marginStart="136dp"
            android:adjustViewBounds="false" android:scaleType="centerInside"/>
    <TextView
            android:text=""
            android:layout_width="126dp"
            android:layout_height="wrap_content" android:id="@+id/date"
            android:layout_marginTop="0dp"
            android:layout_marginStart="73dp" android:layout_alignParentEnd="true"
            android:layout_marginEnd="52dp" android:layout_toEndOf="@+id/title" android:layout_alignTop="@+id/title"/>
</RelativeLayout>
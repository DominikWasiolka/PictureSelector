<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddImage">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/date" android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp" android:layout_marginTop="16dp"
            android:layout_below="@+id/tags" android:layout_alignEnd="@+id/tags" android:layout_alignStart="@+id/tags"
            android:text="Date"/>
    <Button
            android:text="SAVE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/save_button"
            android:layout_marginStart="54dp" android:layout_marginEnd="70dp"
            android:layout_marginTop="133dp" android:layout_below="@+id/date"
            android:layout_alignStart="@+id/date" android:layout_alignEnd="@+id/date"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tags"
            android:ems="10"
            android:id="@+id/tags" android:layout_marginEnd="-2dp"
            android:layout_marginStart="1dp" android:layout_marginTop="16dp"
            android:layout_below="@+id/title" android:inputType="text" android:layout_alignEnd="@+id/title"
            android:layout_alignStart="@+id/title"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Url"
            android:ems="10"
            android:id="@+id/url" android:layout_alignParentEnd="true" android:layout_marginEnd="104dp"
            android:layout_alignParentStart="true" android:layout_marginStart="94dp" android:layout_marginTop="16dp"
            android:layout_alignParentTop="true" android:inputType="textUri"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:ems="10"
            android:id="@+id/title" android:layout_marginEnd="1dp"
            android:layout_marginStart="-1dp" android:layout_marginTop="16dp"
            android:layout_below="@+id/url" android:inputType="text" android:layout_alignStart="@+id/url"
            android:layout_alignEnd="@+id/url"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="300dp">
    <TextView
            android:id="@+id/inf_title"
            android:textSize="25dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true"
             android:layout_alignParentStart="true"/>
    <TextView
            android:id="@+id/inf_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="12dp"
            android:layout_below="@+id/inf_title" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"/>
    <TextView
            android:id="@+id/inf_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="10dp"
            android:layout_below="@+id/inf_url"/>
    <TextView
            android:id="@+id/inf_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="15dp"
            android:layout_below="@+id/inf_date"/>
</RelativeLayout>